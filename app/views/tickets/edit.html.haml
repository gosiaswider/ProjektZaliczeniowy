%h1 Edit ticket
= simple_form_for([@project, @ticket], html: { class: 'form-vertical' }) do |f|   
  = f.input :name
  = f.input :description
  = f.input :priority do
    = f.select :priority, ['Low', 'Normal', 'High', 'Urgent', 'Immediately']
  = f.input :difficulty do
    = f.select :priority, ['Easy', 'Medium','Hard']
  = f.input :status do
    = f.select :status, ['Open', 'Closed', 'Canceled']
  - if @ticket.picture.present?
    = image_tag @ticket.picture.url(:medium )
    Remove the picture
    = f.check_box :remove_picture
  - else
    = f.input :picture
  %br
  %br
  .btn-group{:role => "group"}
  = f.button :submit, class: "btn btn-success"
  = link_to 'Back to list of tickets', project_tickets_path(@project), :method => :get, class: "btn btn-info"
%br