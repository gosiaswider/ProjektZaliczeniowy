=link_to 'New ticket', new_project_ticket_path(@project) , method: :get, class: "btn btn-primary"
%br
%br

.panel-body
  %table.table.table-bordered
    %thead
      %tr
        %th Name
        %th Description
        %th Priority
        %th Status
        %th Difficulty
        %th{:colspan => "3"}
      -  @tickets.each do |p|
        %tr
          %td= p.name
          %td= p.description
          %td= p.priority
          %td= p.status
          %td= p.difficulty
          %td
            .btn-group{:role => "group"}
            = link_to 'Show', project_ticket_path(@project, p) , method: :get, class: "btn btn-info"
            - if can? :ud, p
              = link_to 'Edit', edit_project_ticket_path(@project, p) , method: :get, class: "btn btn-warning"
              = link_to 'Delete', project_ticket_path(@project, p), method: :delete,  data: { confirm: 'Are you sure?' }, class: "btn btn-danger"

=link_to 'Back to project', project_path(@project) , method: :get, class: "btn btn-info"