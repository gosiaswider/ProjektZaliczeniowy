=link_to 'New ticket', new_project_ticket_path(@project) , method: :get, class: "btn btn-default"

.panel-body
  %table.table.table-bordered
    %thead
      %tr
        %th Name
        %th Description
        %th{:colspan => "3"}
      -  @tickets.each do |p|
        %tr
          %td= p.name
          %td= p.description
          %td= link_to 'Show', project_ticket_path(@project, p) , method: :get, class: "btn btn-default"
          %td= link_to 'Edit', edit_project_ticket_path(@project, p) , method: :get, class: "btn btn-default"
          %td= link_to 'Delete', project_ticket_path(@project, p), method: :delete,  data: { confirm: 'Are you sure?' }, class: "btn btn-default"

=link_to 'Back to project', project_path(@project) , method: :get, class: "btn btn-default"