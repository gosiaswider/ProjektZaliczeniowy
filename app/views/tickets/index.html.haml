            %td= ticket.tittle
            %td= ticket.description
            %td
              .btn-group
                %button.btn.btn-inverse.btn-xs{:href => "#"} 
                  = link_to 'Show', ticket_path(ticket)
            %td
              .btn-group
                %button.btn.btn-inverse.btn-xs{:href => "#"} 
                  = link_to "Edit", edit_ticket_path(ticket)
            %td
              .btn-group
                %button.btn.btn-inverse.btn-xs{:href => "#"} 
                  =link_to 'Destroy', ticket_path(ticket), |
