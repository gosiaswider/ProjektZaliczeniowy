.btn-group
  %button.btn.btn-inverse{:href => "#"} 
    =link_to 'New ticket', new_project_ticket_path(@project) 
%br
.panel.panel-default
  .panel-heading
    %h3.panel-title Listing tickets
  .panel-body
    %table.table.table-bordered
      %thead
        %tr
          %th Tittle
          %th Description
          %th{:colspan => "3"}
        - @ticket.each do |project|
          %tr
            %td= @ticket.tittle
            %td= @ticket.description
            %td
              .btn-group
                %button.btn.btn-inverse.btn-xs{:href => "#"} 
                  = link_to 'Show', project_ticket_path(@project,@ticket)
            %td
              .btn-group
                %button.btn.btn-inverse.btn-xs{:href => "#"} 
                  = link_to "Edit", edit_project_ticket_path(@project,@ticket)
            %td
              .btn-group
                %button.btn.btn-inverse.btn-xs{:href => "#"} 
                  =link_to 'Destroy', project_ticket_path(@project,@ticket), |
                method: :delete,                          |
                data: { confirm: 'Are you sure?' }        |
