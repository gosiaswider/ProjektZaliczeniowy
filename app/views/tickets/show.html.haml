.page-header
  %h1
    = @ticket.name
    %small from project: 
    = @project.name

%h3
  %strong Description:
  = @ticket.description
%h3
  %strong Status:
  = @ticket.status
%h3
  %strong Difficulty:
  = @ticket.difficulty

- if @ticket.picture.present?
  %h3
  %strong Attachment name:
  = @ticket.attachment_name
  %br
  %strong Attachment:
  = link_to "#{@ticket.attachment_name}", @ticket.picture.url(:original, false)
%br
%br
=link_to 'Back to list of tickets', project_tickets_path(@project) , method: :get, class: "btn btn-info"
