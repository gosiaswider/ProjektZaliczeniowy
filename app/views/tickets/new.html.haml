%h1 New ticket
  
= form_for @ticket, :html => { :class => 'super', :multipart => true } do |f|
  - if @ticket.errors.any?
    #error_explanation
      %h2
        = pluralize(@ticket.errors.count, "error")
        prohibited
        this ticket from being saved:
      %ul
        - @ticket.errors.full_messages.each do |msg|
          %li= msg
= render 'form'

.btn-group
  %button.btn.btn-inverse{:href => "#"} 
    = link_to 'Back to Projects', project_tickets_path(@project, @ticket)