.panel.panel-default
  .panel-heading
    %h3.panel-title Listing Projects
  .panel-body
    %table.table.table-bordered
      %thead
        %tr
          %th Name
          %th{:colspan => "3"}
        - @project.each do |project|
          %tr
            %td= project.name
            %td= link_to 'Show project', project_path(project) , method: :get, class: "btn btn-info"
            %td=link_to 'Edit project', edit_project_path(project), method: :get, class: "btn btn-warning"
            %td=link_to 'Destroy the project', project_path(project) , method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"
            
