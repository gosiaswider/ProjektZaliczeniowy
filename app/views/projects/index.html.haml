=link_to 'New project', new_project_path , method: :get, class: "btn btn-default"

%br
.panel.panel-default
  .panel-heading
    %h3.panel-title Listing Projects
  .panel-body
    %table.table.table-bordered
      %thead
        %tr
          %th Name
          %th Description
          %th{:colspan => "3"}
        - @project.each do |project|
          %tr
            %td= project.name
            %td= project.description
            %td
              .btn-group
                %button.btn.btn-inverse.btn-xs{:href => "#"} 
                  = link_to 'Show', project_path(project)
            %td
              .btn-group
                %button.btn.btn-inverse.btn-xs{:href => "#"} 
                  = link_to "Edit", edit_project_path(project)
            %td
              .btn-group
                %button.btn.btn-inverse.btn-xs{:href => "#"} 
                  =link_to 'Destroy', project_path(project), |
                method: :delete,                          |
                data: { confirm: 'Are you sure?' }        |
