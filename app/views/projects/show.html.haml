.row
  .col
    %h3= @project.name
    %br
    %h4 Description:
    %h3= @project.description
    %br
  .btn-group{:role => "group"}
  =link_to 'Back to Projects', projects_path , method: :get, class: "btn btn-info"
  =link_to 'Tickets', project_tickets_path(@project) , method: :get, class: "btn btn-primary"
  - if can? :manage, @project
    =link_to 'Edit Project', edit_project_path(@project) , method: :get, class: "btn btn-warning" 
