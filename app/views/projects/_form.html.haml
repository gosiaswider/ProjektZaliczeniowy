= simple_form_for @project, html: { class: 'form-vertical' } do |f|
  = f.error_notification
  = f.input :name
  = f.input :description
  %br
  .btn-group{:role => "group"}
  = f.button :submit, class: "btn btn-success"
  =link_to 'Back to Projects', projects_path , method: :get, class: "btn btn-info"
  %br
